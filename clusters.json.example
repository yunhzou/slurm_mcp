{
  "default_cluster": "production",
  "clusters": [
    {
      "name": "production",
      "description": "Main production HPC cluster with H100 GPUs",
      "ssh_port": 22,
      "ssh_user": "your_username",
      "ssh_key_path": "~/.ssh/id_rsa",
      "nodes": {
        "login": ["login1.production-hpc.example.com", "login2.production-hpc.example.com"],
        "data": ["data-copy.production-hpc.example.com"],
        "vscode": ["vscode.production-hpc.example.com"]
      },
      "default_node_type": "login",
      "user_root": "/lustre/users/your_username",
      "default_account": "your_project",
      "default_partition": "batch",
      "command_timeout": 60,
      "gpu_partitions": "gpu,interactive",
      "cpu_partitions": "cpu,batch",
      "interactive_partition": "interactive",
      "interactive_default_time": "4:00:00",
      "interactive_default_gpus": 8,
      "interactive_session_timeout": 3600,
      "gpfs_root": "/lustre",
      "default_image": "/lustre/users/your_username/images/pytorch.sqsh"
    },
    {
      "name": "dev",
      "description": "Development cluster for testing",
      "ssh_port": 22,
      "ssh_user": "your_username",
      "ssh_key_path": "~/.ssh/id_rsa_dev",
      "nodes": {
        "login": ["login.dev-cluster.example.com"]
      },
      "default_node_type": "login",
      "user_root": "/home/your_username",
      "default_account": "dev_project",
      "default_partition": "debug",
      "command_timeout": 30,
      "gpu_partitions": "gpu",
      "cpu_partitions": "cpu",
      "interactive_partition": "debug",
      "interactive_default_time": "1:00:00",
      "interactive_default_gpus": 1,
      "interactive_session_timeout": 1800
    },
    {
      "name": "cloud",
      "description": "Cloud-based Slurm cluster",
      "ssh_port": 2222,
      "ssh_user": "cloud_user",
      "ssh_key_path": "~/.ssh/cloud_key",
      "nodes": {
        "login": ["slurm.cloud-provider.example.com"],
        "data": ["slurm-data.cloud-provider.example.com"]
      },
      "default_node_type": "login",
      "user_root": "/shared/users/cloud_user",
      "default_account": "cloud_account",
      "default_partition": "standard",
      "command_timeout": 120,
      "gpu_partitions": "a100,v100",
      "cpu_partitions": "standard,highmem",
      "interactive_partition": "standard",
      "interactive_default_time": "2:00:00",
      "interactive_default_gpus": 4,
      "interactive_session_timeout": 3600,
      "dir_datasets": "/shared/datasets",
      "dir_models": "/shared/users/cloud_user/models",
      "dir_results": "/shared/users/cloud_user/results",
      "dir_logs": "/shared/users/cloud_user/logs"
    }
  ]
}
